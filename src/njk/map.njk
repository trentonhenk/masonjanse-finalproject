{% extends '_templates/base.njk' %}

{% block content %}
<div id="carouselExampleControls" class="m-5 carousel slide" data-bs-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img src="img/fullmapgreen.jpg" class="d-block w-100" alt="map of Austin, Texas showing greenlined area">
    </div>
    <div class="carousel-item">
      <img src="img/statsgreen.jpg" class="d-block w-100" alt="statistics of greenlined area in Austin, Texas">
    </div>
    <div class="carousel-item">
      <img src="img/fullmapred.jpg" class="d-block w-100" alt="map of Austin, Texas showing redlined area">
    </div>
    <div class="carousel-item">
      <img src="img/statsred.jpg" class="d-block w-100" alt="statistics of redlined area in Austin, Texas">
    </div>
  </div>
  <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
</div>
<div class="container">
  <div class="row">
    <div class="col">
      <h4 class="text-center">Source</h4>
      <p class="text-center">All photos are from the Social Vulnerability Index.</p>
    </div>
{% endblock %}